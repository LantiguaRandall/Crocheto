<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrochetoApp.Pages.Home.HomeAdmin"
             Title="HomeAdmin">
    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30">

            <Label Text="Bienvenido, Admin" 
                   HorizontalOptions="Center" 
                   FontAttributes="Bold" 
                   FontSize="24"/>

            <Button Text="Gestionar Usuarios" 
                    Command="{Binding GestionarUsuariosCommand}"/>

            <Button Text="Ver Estadísticas" 
                    Command="{Binding VerEstadisticasCommand}"/>

            <!-- Agrega más botones o elementos según necesites -->

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>